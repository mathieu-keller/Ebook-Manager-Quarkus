{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "workarounds:all",
    ":ignoreUnstable",
    ":ignoreModulesAndTests",
    ":prImmediately",
    ":separateMajorReleases",
    ":combinePatchMinorReleases",
    "group:monorepos",
    "group:recommended",
    "group:allNonMajor",
    ":prConcurrentLimitNone",
    ":prHourlyLimitNone",
    ":semanticPrefixFixDepsChoreOthers",
    ":semanticCommits",
    ":semanticCommitTypeAll(fix)"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "(^|/)application\\.[^/]*$",
        "(^|/)application-test\\.[^/]*$"
      ],
      "matchStrings": [
        "base-jvm-image:\\s(?<depName>.*?):(?<currentValue>.*?)@(?<currentDigest>.*?)\\s",
        "base-native-image:\\s(?<depName>.*?):(?<currentValue>.*?)@(?<currentDigest>.*?)\\s",
        "image:\\s(?<depName>.*?)\n\\s*version:\\s(?<currentValue>.*?)\\s"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "fileMatch": [
        "(^|/)stack-definition\\.[^/]*$"
      ],
      "matchStrings": [
        "image:\\s(?<depName>.*?):(?<currentValue>.*?)@(?<currentDigest>.*?)\\s"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "fileMatch": [
        "(^|/)README\\.[^/]*$"
      ],
      "matchStrings": [
        "image:\\s(?<depName>.*?):(?<currentValue>.*?)\\s"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "automerge": true,
  "automergeType": "pr",
  "automergeStrategy": "rebase",
  "platformAutomerge": true,
  "dependencyDashboard": true,
  "labels": [
    "dependencies"
  ],
  "commitMessageAction": "bump",
  "reviewersFromCodeOwners": true
}